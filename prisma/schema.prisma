generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String       @id @default(auto()) @map("_id") @db.ObjectId
  email     String       @unique
  name      String
  password  String
  role      Role         @default(USER)
  address   UserAddress?
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  orders    Order[]
}

type UserAddress {
  city         String
  country      String
  neighborhood String
  number       String
  state        String
  street       String
  zip          String
}

enum Role {
  ADMIN
  OPERATOR
  USER
}

model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String?
  category    Category
  price       Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  order       Order?   @relation(fields: [orderId], references: [id])
  orderId     String?  @db.ObjectId
}

enum Category {
  PIZZA
  DRINK
}

model Order {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  products  Product[]
  status    OrderStatus @default(PENDING)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  user      User?       @relation(fields: [userId], references: [id])
  userId    String?     @db.ObjectId
}

enum OrderStatus {
  PENDING
  DELIVERED
  CANCELED
}
