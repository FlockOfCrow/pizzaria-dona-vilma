generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type UserAddress {
  city         String
  country      String
  neighborhood String
  number       String
  state        String
  street       String
  zip          String
}

model User {
  id       String      @id @default(auto()) @map("_id") @db.ObjectId
  address  UserAddress
  email    String      @unique
  name     String
  password String
}
