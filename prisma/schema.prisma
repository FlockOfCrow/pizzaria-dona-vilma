generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String       @id @default(auto()) @map("_id") @db.ObjectId
  email     String       @unique
  name      String
  password  String
  role      Role         @default(USER)
  address   UserAddress?
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  ordersId  String[]     @default([])
}

type UserAddress {
  city         String
  country      String
  neighborhood String
  number       String
  state        String
  street       String
  zip          String
}

enum Role {
  ADMIN
  OPERATOR
  USER
}

model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String   @unique
  description String?
  image       String?
  category    Category
  price       Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum Category {
  PIZZA
  DRINK
}

model Order {
  id         String      @id @default(auto()) @map("_id") @db.ObjectId
  productsId String[]    @default([])
  status     OrderStatus @default(PENDING)
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  userId     String
}

enum OrderStatus {
  PENDING
  DELIVERED
  CANCELED
}
